@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel
@{
    ViewData["PageTitle"] = "Danh sách bài viết";
    var postsList = ViewBag.PostsList as IPagedList<Post>;
}

<h1>
    Danh sách bài viết
</h1>

<partial name="_PostFilterPane" model="Model"/>
@if(postsList != null && postsList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Tác giả</th>
                <th>Chủ đề</th>
                <th>Xuất bản</th>
                <th>Xóa bài viết</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var post in postsList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Posts"
                           asp-action="Edit"
                           asp-route-id="@post.Id"
                           class="text-bold">
                           @post.Title
                        </a>
                        <p class="text-muted">
                            @post.ShortDescription
                        </p>
                    </td>
                    <td>
                        @post.Author.FullName
                    </td>
                    <td>
                        @post.Category.Name
                    </td>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Posts"
                           asp-action="ChangeStatus"
                           asp-route-id="@post.Id"
                           asp-route-p="@postsList.PageNumber"
                           asp-route-ps="@postsList.PageSize"
                           class="btn change-status">
                            @if (post.Published)
                            {
                                <i class="fa fa-toggle-on" style="color:deepskyblue"></i>
                                <span style="color:deepskyblue">Có</span>
                            }
                            else
                            {
                                <i class="fa fa-toggle-off" style="color:red"></i>
                                <span style="color:red">Không</span>
                            }
                        </a>
                    </td>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Posts"
                           asp-action="Delete"
                           asp-route-id="@post.Id"
                           asp-route-p="@postsList.PageNumber"
                           asp-route-ps="@postsList.PageSize"
                           class="btn"
                           onclick="return confirm('Bạn có thực sự muốn xóa bài viết này không?')">
                           <i class="fa fa-trash" style="color:red"></i>
                           <span style="color:red">Xóa</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Pager" model="postsList"></partial>
}
else
{
    <h1 class="text-danger">
        Không tìm thấy bài viết nào
    </h1>
}

