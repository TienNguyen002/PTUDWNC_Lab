@model TatBlog.WebApp.Areas.Admin.Models.AuthorFilterModel
@{
    ViewData["PageTitle"] = "Danh sách tác giả";
    var authorsList = ViewBag.AuthorsList as IPagedList<Author>;
}

<h1>
    Danh sách tác giả
</h1>

@if(authorsList != null && authorsList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Hình đại diện</th>
                <th>Tên tác giả</th>
                <th>Email</th>
                <th>Xóa tác giả</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in authorsList)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(author.ImageUrl))
                        {
                            <img src="/@author.ImageUrl"
                                 class="rounded-circle"
                                 style="width:80px;height:80px;object-fit:cover" />
                        }
                        else
                        {
                            <img src="~/images/author.jpg"
                                 class="rounded-circle object-fit-cover "
                                 style="width:80px;height:80px;object-fit:cover" />
                        }
                    </td>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Authors"
                           asp-action="Edit"
                           asp-route-id="@author.Id"
                           class="text-bold">
                            @author.FullName
                        </a>
                        <p class="text-muted">
                            @author.Notes
                        </p>
                    </td>
                    <td>
                        @author.Email
                    </td>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Posts"
                           asp-action="Delete"
                           asp-route-id="@author.Id"
                           asp-route-p="@authorsList.PageNumber"
                           asp-route-ps="@authorsList.PageSize"
                           class="btn"
                           onclick="return confirm('Bạn có thực sự muốn xóa tác giả này không?')">
                            <i class="fa fa-trash" style="color:red"></i>
                            <span style="color:red">Xóa</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Pager" model="authorsList"></partial>
}
else
{
    <h1 class="text-danger">
        Không tìm thấy tác giả nào
    </h1>
}

